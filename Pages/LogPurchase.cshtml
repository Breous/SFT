@page
@model SFT.Pages.LogPurchaseModel
@{
    ViewData["Title"] = "Log Purchase";
}

<h2>Log a New Purchase</h2>

<form method="post">
    <div class="form-group">
        <label>Brand</label>
        <input type="text" class="form-control" asp-for="Purchase.Brand" required />
    </div>

    <div class="form-group">
        <label>Item Name</label>
        <input type="text" class="form-control" asp-for="Purchase.ItemName" required />
    </div>

    <div class="form-group">
        <label>Material</label>
        <input type="text" class="form-control" asp-for="Purchase.Material" required />
    </div>

    <div class="form-group">
        <label>Price</label>
        <input type="number" class="form-control" asp-for="Purchase.Price" step="0.01" required />
    </div>

    <div class="form-group">
        <label>Sustainability Rating</label>
        <input type="number" class="form-control" asp-for="Purchase.Rating" min="1" max="5" required />
    </div>

    <button type="submit" class="btn btn-success">Save Purchase</button>
</form>