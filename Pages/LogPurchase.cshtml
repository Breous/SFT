@page
@model SFT.Pages.LogPurchaseModel
@{
    ViewData["Title"] = "Log Purchase";
}

<h2 class="mb-4">Log a New Purchase</h2>

<!-- Show all validation errors at the top -->
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Purchase.Brand" class="form-label"></label>
            <input asp-for="Purchase.Brand" class="form-control" />
            <span asp-validation-for="Purchase.Brand" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Purchase.ItemName" class="form-label"></label>
            <input asp-for="Purchase.ItemName" class="form-control" />
            <span asp-validation-for="Purchase.ItemName" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Purchase.Material" class="form-label"></label>
            <input asp-for="Purchase.Material" class="form-control" />
            <span asp-validation-for="Purchase.Material" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="Purchase.Price" class="form-label"></label>
            <input asp-for="Purchase.Price" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Purchase.Price" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="Purchase.Rating" class="form-label"></label>
            <input asp-for="Purchase.Rating" class="form-control" type="number" min="1" max="5" />
            <span asp-validation-for="Purchase.Rating" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-success">Log Purchase</button>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}