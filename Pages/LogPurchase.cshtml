@page
@model SFT.Pages.LogPurchaseModel
@{
    ViewData["Title"] = "Log Purchase";
}

<h2 class="mb-4">Log a New Purchase</h2>

<form method="post">
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Purchase.Brand" class="form-label"></label>
            <input asp-for="Purchase.Brand" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="Purchase.ItemName" class="form-label"></label>
            <input asp-for="Purchase.ItemName" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Purchase.Material" class="form-label"></label>
            <input asp-for="Purchase.Material" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="Purchase.Price" class="form-label"></label>
            <input asp-for="Purchase.Price" class="form-control" type="number" step="0.01" />
        </div>
        <div class="col-md-3">
            <label asp-for="Purchase.Rating" class="form-label"></label>
            <input asp-for="Purchase.Rating" class="form-control" type="number" min="1" max="5" />
        </div>
    </div>

    <button type="submit" class="btn btn-success">Save Purchase</button>
</form>